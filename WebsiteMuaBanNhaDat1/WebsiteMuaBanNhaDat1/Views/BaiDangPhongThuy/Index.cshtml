
@{
    ViewBag.Title = "Bài đăng phong thủy";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .cbo {
        width: 168px;
        height: 22px;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 12px;
    }

    #txtHiddenId {
        display: none;
    }

    .cs {
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
        width: 700px;
        border-radius: 20px;
        border: 2px solid blue;
        margin: 0px auto;
        margin-top: 4%;
        margin-bottom: 2%;
    }

    table#NX_BaiDangPhongThuy {
        width: 90%;
        margin: auto;
    }

    div#khung {
        margin-top: 3%;
    }

    .space {
        width: 50px;
    }

    table.tableEdit {
        margin-left: 30%;
    }

    td.ten {
        padding-left: 15px;
    }
</style>
<script type="text/javascript">
    //ribbon.SetActiveTabIndex(0);
    function OnGridFocusedRowChanged(s, e) {
        s.GetRowValues(s.GetFocusedRowIndex(), 'id;ma_baiviet;hoten;email;noidung;thanhvien;', OnGetRowValues);
    }
    function OnGetRowValues(values) {
        txtHiddenId.SetText(values[0]);
        document.getElementById("txt_ma_baiviet").value = values[1];
        txt_hoten.SetText(values[2]);
        txt_email.SetText(values[3]);
        txt_noidung.SetText(values[4]);
       // document.getElementById("txt_thanhvien").value = values[5];
        if (values[5] == true) {
            document.getElementById("txt_thanhvien").value = "True";
        } else {
            document.getElementById("txt_thanhvien").value = "False";
        }
     
        // txt_ma_loaihinh.SetText(values[2]);
    }
    function fncBtnXoaClick() {
        var x = document.getElementById("txtHiddenId_I").value;
        var result = confirm("Bạn có chắc chắn muốn xóa?");
        if (result) {
            var url = '@Url.Action("Xoa", "BaiDangPhongThuy")' + '?id=' + x;
            window.location.href = url;
            alert("Đã xóa thành công");
        }
        else {
            return false;
        }
    }
</script>
