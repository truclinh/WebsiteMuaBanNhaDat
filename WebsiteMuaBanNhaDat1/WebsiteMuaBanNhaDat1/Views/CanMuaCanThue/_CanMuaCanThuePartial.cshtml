@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "CanMuaCanThue";
        settings.CallbackRouteValues = new { Controller = "CanMuaCanThue", Action = "CanMuaCanThuePartial" };

				settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "CanMuaCanThue", Action = "CanMuaCanThuePartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "CanMuaCanThue", Action = "CanMuaCanThuePartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "CanMuaCanThue", Action = "CanMuaCanThuePartialDelete" };
