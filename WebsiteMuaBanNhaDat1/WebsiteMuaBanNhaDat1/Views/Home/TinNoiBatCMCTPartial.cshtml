@using WebsiteMuaBanNhaDat1.Models
@model IEnumerable<TinRaoCanMuaCanThue>
@foreach (var item in ViewBag.TinRaoCMCTNoiBat)
{
    <li style="border:1px solid #64a30a;border-top:2px solid #64a30a;border-left:2px solid #64a30a;list-style-type:none;padding:10px;background-color:white">
        <b><a href="@Url.Action("ChiTiet","ChiTietTinRao", new {ma_tinrao=item.ma_tinrao, ma_loaihinh=item.ma_loaihinh })" data-toggle="tooltip" title="@item.tieude!" style="color:#304b0a">@(item.tieude)</a></b> 
        <ul>
            <li>
                Giá:
                @if (item.gia_tu != null && item.gia_den != null)
                {
                    <b>@(item.gia_tu) @(item.ten_donvi) - @(item.gia_den) @(item.ten_donvi)</b>
                }
                else if (item.gia_tu != null && item.gia_den == null)
                {
                    <b> Trên @(item.gia_tu)@(item.ten_donvi)</b>
                }
                else if (item.gia_tu == null && item.gia_den != null)
                {
                    <b> Dưới @(item.gia_den) @(item.ten_donvi)</b>
                }
                else if (item.gia_tu == null && item.gia_den == null)
                {
                    <b>Thỏa thuận</b>
                }
&nbsp;&nbsp;
                Diện tích:
                @if (item.dientich_tu != null && item.dientich_den != null)
                {
                    <b>@(item.dientich_tu)m<sup>2</sup> - @(item.dientich_den) m<sup>2</sup></b>
                }
                else if (item.dientich_tu != null && item.dientich_den == null)
                {
                    <b> Trên @(item.dientich_tu) m<sup>2</sup></b>
                }
                else if (item.dientich_tu == null && item.dientich_den != null)
                {
                    <b> Dưới @(item.dientich_den) m<sup>2</sup></b>
                }
                else if (item.dientich_tu == null && item.dientich_den == null)
                {
                    <b>Không xác định</b>
                }
            </li>

            <li>Địa chỉ: @(item.ten_duongpho), @(item.ten_phuongxa), @(item.ten_quanhuyen), @(item.ten_tinhtp)</li>

        </ul>
    </li>
}
