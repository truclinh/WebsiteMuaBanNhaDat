
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<fieldset>
    <legend>TRANG CHỦ</legend>
    <div class="widget_1">
        @foreach (var item in Model)
        {
            if (item.comenucon==true) { 
            <a href="@Url.Action("XemThem", "QuanLy",new {ma_loaihinh=item.ma_loaihinh})">
                <div class="col-sm-4 widget_1_box btnIndex" style="margin-top:20px;margin-bottom:30px">
                    <div class="tile-progress bg-green1">
                        <div class="content">
                            <h3><i class="fa fa-book nav_icon"></i>  @item.ten_loaihinh</h3>
                        </div>
                    </div>
                </div>
            </a>
            }
            else
            {
                <a href="@Url.Action(item.tenkhongdau, "QuanLy")">
                    <div class="col-sm-4 widget_1_box btnIndex" style="margin-top:20px;margin-bottom:30px">
                        <div class="tile-progress bg-green1">
                            <div class="content">
                                <h3><i class="fa fa-book nav_icon"></i>  @item.ten_loaihinh</h3>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
        <div class="clearfix"> </div>
    </div>
</fieldset>
<br />
<fieldset>
    <legend>NHẬN XÉT</legend>
    <div class="widget_1">
            <a href="@Url.Action("NhanXet", "QuanLy", new {loai="TinRaoNhaDat"})">
                <div class="col-sm-6 widget_1_box btnIndex" style="margin-top:20px;margin-bottom:30px">
                    <div class="tile-progress bg-primary">
                        <div class="content">
                            <h3><i class="fa fa-comments-o nav_icon"></i> TIN RAO NHÀ ĐẤT</h3>
                        </div>
                    </div>
                </div>
            </a>
        <a href="@Url.Action("NhanXet", "QuanLy",new {loai="BaiDangPhongThuy"})">
            <div class="col-sm-6 widget_1_box btnIndex" style="margin-top:20px;margin-bottom:30px">
                <div class="tile-progress bg-primary">
                    <div class="content">
                        <h3><i class="fa fa-comments-o nav_icon"></i>  BÀI ĐĂNG PHONG THỦY</h3>
                    </div>
                </div>
            </div>
        </a>
        <div class="clearfix"> </div>
    </div>
</fieldset>
<style>
    .btnIndex :hover{
        background-color:darkblue;
    }
        fieldset 
	{
		border: 3px solid #ddd !important;
		margin: 0;
		xmin-width: 0;
		padding: 10px;       
		position: relative;
		border-radius:4px;
		background-color:#f5f5f5;
		padding-left:10px!important;
	}	
	
		legend
		{
			font-size:30px;
			font-weight:bold;
			margin-bottom: 0px; 
			width: 35%; 
			border: 1px solid #ddd;
			border-radius: 4px; 
			padding: 5px 5px 5px 10px; 
			background-color: #ffffff;
		}
</style>