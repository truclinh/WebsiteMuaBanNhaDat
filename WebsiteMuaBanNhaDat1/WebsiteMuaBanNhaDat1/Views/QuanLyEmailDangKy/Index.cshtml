
@{
    ViewBag.Title = "Quản lý email đăng ký";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .cbo {
        width: 168px;
        height: 22px;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }

    #txtHiddenId {
        display: none;
    }

    .cs {
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
        width: 700px;
        border-radius: 20px;
        border: 2px solid blue;
        margin: 0px auto;
        margin-top: 4%;
        margin-bottom: 2%;
    }

    table#QuanLyEmailDangKy {
        width: 95%;
        margin: auto;
    }

    div#khung {
        margin-top: 5%;
    }

    .space {
        width: 50px;
    }

    table.tableEdit {
        margin-left: 30%;
    }

    td.ten {
        padding-left: 15px;
    }
</style>
<script type="text/javascript">
    document.getElementById("EmailDangKy").style.color = "blue";
    function OnGridFocusedRowChanged(s, e) {
        s.GetRowValues(s.GetFocusedRowIndex(), 'id;email', OnGetRowValues);
    }
    function OnGetRowValues(values) {

        txtHiddenId.SetText(values[0]);
        //txt_ma_taikhoan.SetText(values[0]);
        txt_email.SetText(values[1]);
    }
    function fncBtnXoaClick() {
        var x = document.getElementById("txtHiddenId_I").value;
        var result = confirm("Bạn có chắc chắn muốn xóa?");
        if (result) {
            var url = '@Url.Action("Xoa", "QuanLyEmailDangKy")' + '?id=' + x;
            window.location.href = url;
            alert("Đã xóa thành công");
        }
        else {
            return false;
        }
    }
</script>
<h2>QUẢN LÝ EMAIL ĐĂNG KÝ</h2>
<div id="khung">

    @Html.Action("QuanLyEmailDangKyPartial")

    <div style="width:100%;text-align:center;margin-top:2%">
        @*--------------------------------------Button Thêm*@
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalThem" name="btnThêm">Thêm</button>
        @*--------------------------------------Button Sửa*@
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalSua" name="btnSua">Sửa</button>
        @*--------------------------------------Button Xóa*@
        <button type="button" class="btn btn-primary" name="btnXoa" onclick="fncBtnXoaClick()">Xóa</button>
    </div>
</div>
@*//--------------------------------------*@
@*--------------------------------------*@
@using (Html.BeginForm("SaveNewDocument", "QuanLyEmailDangKy"))
{
    <!-- Modal Thêm-->
    <div class="modal fade" id="myModalThem" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">THÊM EMAIL</h4>
                </div>
                <div class="modal-body">
                    <table class="tableEdit">
                        <tr>
                            <td class="lbl">
                                <label>Email</label>
                            </td>

                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                           {
                               settings.Name = "txtNew_email";
                               settings.Width = System.Web.UI.WebControls.Unit.Pixel(200);
                           }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <center>
                        <button type="submit" class="btn">Lưu</button>
                        <button type="button" class="btn" data-dismiss="modal">Bỏ lưu</button>
                    </center>
                </div>
            </div>

        </div>
    </div>
}
<!--End Modal Thêm-->
@*@Html.Hidden("id")*@
@using (Html.BeginForm("SaveEditDocument", "QuanLyEmailDangKy"))
{
    <!-- Modal Sửa-->
    <div class="modal fade" id="myModalSua" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">SỬA EMAIL</h4>
                    @Html.DevExpress().TextBox(settings =>
{
    settings.Name = "txtHiddenId";
    settings.ReadOnly = true;
    // settings.ClientVisible = false;
}).GetHtml()
                </div>
                <div class="modal-body">
                    <table class="tableEdit">
                        <tr>
                            <td class="lbl">
                                <label>Email</label>
                            </td>

                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                       {
                           settings.Name = "txt_email";
                           settings.Width = System.Web.UI.WebControls.Unit.Pixel(200);
                       }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <center>
                        <button type="submit" class="btn" id="btnLuuSua">Lưu</button>
                        <button type="button" class="btn" data-dismiss="modal">Bỏ lưu</button>
                    </center>
                </div>
            </div>

        </div>
    </div>
}
