@using (Html.BeginForm("SaveNewDocument", "QuanLyTaiKhoan"))
{
    <!-- Modal Thêm-->
    <div class="modal fade" id="myModalThem" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">THÊM TÀI KHOẢN</h4>
                </div>
                <div class="modal-body">
                    <table class="tableEdit">
                        <tr>
                            <td class="lbl">
                                <label>Tên đăng nhập</label>
                            </td>

                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                       {
                           settings.Name = "txtNew_tendangnhap";
                       }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="lbl">
                                <label>Mật khẩu</label>
                            </td>
                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                           {
                               settings.Name = "txtNew_matkhau";
                               settings.Properties.Password = true;
                           }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="lbl">
                                <label>Tên người dùng</label>
                            </td>
                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "txtNew_tennguoidung";
                            }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="lbl">
                                <label>Địa chỉ</label>
                            </td>
                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "txtNew_diachi";
                            }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="lbl">
                                <label>Email</label>
                            </td>
                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
                            {
                                settings.Name = "txtNew_email";
                            }).GetHtml()
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="lbl">
                                <label>Điện thoại</label>
                            </td>
                            <td class="ten">
                                @Html.DevExpress().TextBox(settings =>
