<!-- #Header Starts -->
<div class="container">

    <!-- Header Starts -->
    <div class="header">
        <a href="@Url.Action("Index","Home")"><img src="~/Content/images/logo.png" alt="Realestate"></a>

        <ul class="pull-right">
            @*<p>Đăng nhập để thực hiện đăng bài</p>*@
            @if (Session["NguoiDung"] == null)
            {
                <li> <button class="btn btn-info" data-toggle="modal" data-target="#loginpop"><span class="glyphicon glyphicon-pencil"></span>Đăng tin miễn phí </button></li>
            }
            else
            {
                <li><button class="btn btn-lg btn-danger" onclick="window.location.href='@Url.Action("DangTin","DangTin")'"><span class="glyphicon glyphicon-pencil"></span>Đăng tin miễn phí </button></li>
                if (Session["AnhDaiDien"]!=null)
                {
                    <li><img src="https://graph.facebook.com/@(Session["AnhDaiDien"].ToString())/picture" /></li>
                }

                <li><h4><i class="fas fa-user"></i> <b>@Session["NguoiDung"].ToString()</b></h4></li>
                <li><a onclick="dangxuat();" style="cursor:pointer;" id="linkDangXuat">Đăng xuất <i class="fas fa-sign-out-alt"></i></a></li>
            }
        </ul>
    </div>
    <!-- #Header Starts -->
</div>

<style>
    #linkDangXuat:hover{
        color:red;
    }
</style>
<script>
    function dangxuat() {
        var r = confirm("Bạn có chắn chắn muốn Đăng xuất?");
        if (r == true) {
            window.location.href = '@Url.Action("DangXuat","TaiKhoan")';
        } else {
            return false;
        }
    }
</script>