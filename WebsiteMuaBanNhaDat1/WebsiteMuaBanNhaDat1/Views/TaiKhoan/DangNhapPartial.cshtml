<link href="~/Content/assets/bootstrap/css/bootstrap-social.css" rel="stylesheet" />
<!-- Modal -->
<div id="loginpop" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="row">
                <div class="col-sm-6 login">
                    <h4>ĐĂNG NHẬP</h4>
                    @using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputEmail2">Email</label>
                            <input type="email" name="txtEmail" class="form-control" id="exampleInputEmail2" placeholder="Nhập địa chỉ Email">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="exampleInputPassword2">Mật khẩu</label>
                            <input type="password" name="txtPass" class="form-control" id="exampleInputPassword2" placeholder="Mật khẩu">
                        </div>
                        <center>
                            <button type="submit" class="btn btn-success">Đăng nhập</button>
                            <a href="@Url.Action("LoginFacebook","TaiKhoan")" class="btn btn-block btn-social btn-facebook">
                                 Đăng nhập bằng Facebook
                            </a>
                        </center>
                    }
                </div>
                <div class="col-sm-6">
                    <h4>Người dùng mới</h4>
                    <p>Thực hiệc đăng ký để tiến hành đăng bài</p>
                    <button type="submit" class="btn btn-info" onclick="window.location.href='@Url.Action("DangKy","TaiKhoan")'">Đăng ký</button>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- /.modal -->
